<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/txtTitulo" android:textStyle="bold" android:textSize="18sp" android:layout_width="80dp" android:layout_height="80dp"/>
    <TextView android:id="@+id/txtGenero" android:layout_width="wrap_content" android:layout_height="80dp"/>
    <TextView android:id="@+id/txtDuracion" android:layout_width="wrap_content" android:layout_height="80dp"/>
    <TextView android:id="@+id/txtAlbum" android:layout_width="wrap_content" android:layout_height="80dp"/>
    <TextView android:id="@+id/txtArtista" android:layout_width="wrap_content" android:layout_height="80dp"/>
</LinearLayout>