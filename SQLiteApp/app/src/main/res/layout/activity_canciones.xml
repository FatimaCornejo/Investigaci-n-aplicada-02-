<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_canciones"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- Búsqueda -->
    <EditText
        android:id="@+id/txtBuscar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="@string/hint_buscar_cancion"
        android:inputType="text"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- Filtros en fila -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline33"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <Spinner
        android:id="@+id/spnGenero"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline33"
        android:layout_marginEnd="4dp"/>

    <Spinner
        android:id="@+id/spnArtista"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtBuscar"
        app:layout_constraintStart_toStartOf="@id/guideline33"
        app:layout_constraintEnd_toStartOf="@id/guideline66"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>

    <Spinner
        android:id="@+id/spnAlbum"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtBuscar"
        app:layout_constraintStart_toStartOf="@id/guideline66"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"/>

    <!-- Lista de canciones -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCanciones"
        android:layout_width="250dp"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@id/spnGenero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
